<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="np.com.ravi.cameratest.MainActivity"
    android:id="@+id/main_layout">

    <Button
        android:id="@+id/button_def_camera"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_defCamera"/>

    <Button
        android:id="@+id/button_open_gallery"
        android:layout_below="@+id/button_def_camera"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_gallery"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_below="@id/button_open_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
